<div class="alert alert-<%= @class %> alert-dismissible fade show text-center" role="alert" style="margin-top: 2.3em; margin-bottom: -3.0em;">
  <%= @message %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>